{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "API Rest em NodeJS aplicando TDD, Clean Architecture e Design Patterns seguindo as aulas do Rodrigo Manguinho",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main",
    "test": "jest --colors --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --silent",
    "test:ci": "npm test -- --silent --coverage"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "keywords": [],
  "author": "Evandro Mateus",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.0.1",
    "@types/jest": "^26.0.24",
    "husky": "^4.3.8",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "standard": "^16.0.3",
    "supertest": "^6.1.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.0.1",
    "validator": "^13.6.0"
  }
}
